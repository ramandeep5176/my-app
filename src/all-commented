function MenuList() {
  return (
    <section>
      {menu.map((menus) => {
        return <Menus></Menus>;
      })}
    </section>
  );
}

const Menus = (props) => {
  const { title, category, price, img, desc } = props.menus;
  return (
    <article className="container">
      <h2 className="h2">{title}</h2>
      <p className="p">{category}</p>
      <p className="p">{price}</p>
      <img src={img} />
      <p>{desc}</p>
    </article>
  );
};

